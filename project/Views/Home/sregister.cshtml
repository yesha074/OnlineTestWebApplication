@model project.Models.STUDENT

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>sregister</title>
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        body {
            background-image: url('../../Content/images/15.jpg');
            background-size: cover;
        }
    </style>
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top"> <center><h2 style="color:white">Student Registration</h2></center></div>
    
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-8">
                <center> <h2 style="color:red">Student Registration</h2></center>
                @if (ViewBag.msg != null)
                {
                    <div class="alert alert-danger">
                        <strong>Error!</strong>@ViewBag.msg
                    </div>
                }
                <div class="container" style="width:40%">
                    <br />
                    <br />
                    @using (@Html.BeginForm("sregister", "Home", FormMethod.Post,new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-group">
                            <label for="email">Email:</label>
                            @Html.TextBoxFor(x => x.STUDENT_NAME, htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="pwd">Password:</label>
                            @Html.PasswordFor(x => x.STUDENT_PASSWORD, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="file">Image:</label>
                            <input type="file" class="form-control btn btn-info" id="imgfile" name="imgfile" />
                        </div>
                        <br />
                        <input type="submit" value="Register Now!" class="btn btn-danger btn-block" />

                    }
                </div>
</div>
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
                <div class="col-lg-4 col-md-4 col-sm-4">
                     
                    <img src="~/Content/images/studentregister.jpg" class="img-responsive" />
                
                </div>
            </div>
        </div>
   

</body>
</html>
