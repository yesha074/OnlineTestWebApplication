@model project.Models.ADMIN

@{
    ViewBag.Title = "tlogin";
}
    <style>
        body {
            background-color:palegreen;
        }
    </style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-md-10 col-xs-10 col-sm-10">
                    <h2 style="color:darkblue;font-family:'Arial Rounded MT';margin-left:22%">Faculty Login</h2>
                    <hr />
                    <br />
                    
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group" style="color:darkblue">
                        @Html.LabelFor(model => model.ADMIN_NAME, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ADMIN_NAME, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ADMIN_NAME, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" style="color:darkblue">
                        @Html.LabelFor(model => model.ADMIN_PASSWORD, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.ADMIN_PASSWORD, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ADMIN_PASSWORD, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Login Now!" class="btn btn-danger btn-block" />
                        </div>

                    </div>

                </div>

                <br />
               
                <div class="col-lg-2 col-md-2 col-xs-2 col-sm-2">
                    <img src="~/Content/images/adminlogin.jpg" class="img-responsive" />
                </div>
            </div>
        </div>
    </div>
}
<p style="color:red">@ViewBag.msg</p>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
